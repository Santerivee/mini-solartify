{
    "database": {
        "rules": "database.rules.json"
    },
    "hosting": {
        "site": "solartify-mini",
        "public": "/",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}
